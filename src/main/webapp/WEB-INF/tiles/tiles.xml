<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<!-- Template -->
	<definition name="layout.basic" template="/WEB-INF/views/layout/basic.jsp">
		<put-attribute name="title" value="basic" cascade="true" />
		<put-attribute name="head" value="/WEB-INF/views/template/head.jsp"></put-attribute>
		<put-attribute name="topbar" value="/WEB-INF/views/template/topbar.jsp" />
		<put-attribute name="body" value="" />
		
		<!-- The <put-list-attribute> element must be at the end of the definition -->
		<put-list-attribute name="cssList" cascade="true">
			<add-attribute value="/resources/bootstrap/3.3.7-1/css/bootstrap.min.css" />
		</put-list-attribute>
		
		<put-list-attribute name="jsList" cascade="true">
			<add-attribute value="/resources/jquery/1.11.1/jquery.min.js" />
			<add-attribute value="/resources/bootstrap/3.3.7-1/js/bootstrap.min.js" />
			<add-attribute value="/resources/js/common.js" />
		</put-list-attribute>
		
		<put-list-attribute name="privateCssList" cascade="true" />
		<put-list-attribute name="privateJsList" cascade="true"/>
	</definition>
	
	<!-- 메인화면 -->
	<definition name="main" extends="layout.basic">
		<put-attribute name="title" value="main" cascade="true" />
		<put-attribute name="body" value="/WEB-INF/views/main.jsp" />
	</definition>
	
	<!-- 로그인 화면 -->
	<definition name="signin" extends="layout.basic">
		<put-attribute name="title" value="signin" cascade="true"/>
		<put-attribute name="body" value="/WEB-INF/views/signin.jsp" />
		
		<put-list-attribute name="privateCssList" cascade="true">
			<add-attribute value="/resources/css/signin.css" />
			<add-attribute value="/resources/plugin/loading/showLoading.css" />
		</put-list-attribute>
		
		<put-list-attribute name="privateJsList" cascade="true">
			<add-attribute value="/resources/plugin/loading/jquery.showLoading.min.js" />
			<add-attribute value="/resources/js/common.js" />
			<add-attribute value="/resources/js/signin/signin_v.js" />
		</put-list-attribute>
	</definition>
	
	<!-- 등록화면 -->
	<definition name="registForm" extends="layout.basic">
		<put-attribute name="title" value="regist" cascade="true" />
		<put-attribute name="body" value="/WEB-INF/views/regist/registForm.jsp" />
		
		<put-list-attribute name="privateCssList" cascade="true">
			<add-attribute value="/resources/css/regist.css" />
		</put-list-attribute>
		
		<put-list-attribute name="privateJsList" cascade="true">
			<add-attribute value="/resources/js/regist/regist_c.js" />
			<add-attribute value="/resources/js/regist/regist_m.js" />
			<add-attribute value="/resources/js/regist/regist_v.js" />
		</put-list-attribute>
	</definition>
	
	<!-- 내계정 화면 -->
	<definition name="account" extends="layout.basic">
		<put-attribute name="title" value="account" cascade="true" />
		<put-attribute name="body" value="/WEB-INF/views/my/account.jsp" />
		
		<put-list-attribute name="privateCssList" cascade="true">
			<add-attribute value="/resources/css/account.css" />
		</put-list-attribute>
		
		<put-list-attribute name="privateJsList" cascade="true">
			<add-attribute value="/resources/js/account/account_c.js" />
		</put-list-attribute>
	</definition>
	
	<!-- 로그화면 -->
	<definition name="accessLog" extends="layout.basic">
		<put-attribute name="title" value="log" cascade="true" />
		<put-attribute name="body"  value="/WEB-INF/views/admin/accessLog.jsp" />
	</definition>
</tiles-definitions>
